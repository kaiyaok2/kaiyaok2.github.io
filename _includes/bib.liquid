<div class="publication">
  <div class="title">
    {% if entry.url %}
      <a href="{{ entry.url }}" target="_blank">{{ entry.title }}</a>
    {% else %}
      {{ entry.title }}
    {% endif %}
  </div>

  <div class="authors">{{ entry.author }}</div>
  <div class="details">{{ entry.booktitle }}, {{ entry.year }}</div>

  {% if entry.pdf or entry.doi or entry.arxiv or entry.html %}
    <div class="links">
      {% if entry.pdf %}<a href="{{ entry.pdf }}" target="_blank">[PDF]</a>{% endif %}
      {% if entry.slides %}<a href="{{ entry.slides }}" target="_blank">[Slides]</a>{% endif %}
      {% if entry.doi %}<a href="https://doi.org/{{ entry.doi }}" target="_blank">[DOI]</a>{% endif %}
      {% if entry.arxiv %}<a href="https://arxiv.org/abs/{{ entry.arxiv }}" target="_blank">[arXiv]</a>{% endif %}
      {% if entry.html %}<a href="{{ entry.html }}" target="_blank">[Website]</a>{% endif %}
    </div>
  {% endif %}
</div>
